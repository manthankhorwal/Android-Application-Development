<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar_settings"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
              android:id="@+id/close_settings"
              android:text="Close"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/Black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
          <TextView
              android:id="@+id/update_settings"
              android:layout_marginRight="10dp"
              android:layout_alignParentRight="true"
              android:text="Update"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/Black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
          </TextView>
      </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/app_bar_settings"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:id="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profile_image"
        android:id="@+id/settings_profile_name"
        android:layout_marginTop="14dp"
        android:hint="Enter Name"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="20dp"></EditText>
     <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profile_name"
        android:id="@+id/settings_profile_number"
        android:layout_marginTop="20dp"
        android:hint="Enter MobileNumber"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="20dp"></EditText>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profile_number"
        android:id="@+id/settings_profile_address"
        android:layout_marginTop="20dp"
        android:hint="Enter Address"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textSize="20dp"></EditText>

</RelativeLayout>