<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_category">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <Button
      android:id="@+id/home_button"
      android:textColor="@color/White"
      android:text="Home"
      android:background="@drawable/input_design"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></Button>
</androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"

        ></TextView>
        <LinearLayout
            android:layout_below="@id/slogan_category"
           android:id="@+id/linear1_category_layout"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent">

            <ImageView
                android:tag="1"
                android:id="@+id/t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:onClick="onclickitem"
                android:src="@drawable/tshirts"
></ImageView>
            <ImageView
                android:tag="2"
                android:onClick="onclickitem"
                android:id="@+id/sports_t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"
                ></ImageView>
            <ImageView
                android:tag="3"
                android:onClick="onclickitem"
                android:id="@+id/female_dresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female_dresses"
                ></ImageView>
            <ImageView
                android:tag="4"
                android:onClick="onclickitem"
                android:id="@+id/sweaters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sweather"
                ></ImageView>

        </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear1_category_layout"
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent">

        <ImageView
            android:tag="5"
            android:onClick="onclickitem"
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            ></ImageView>
        <ImageView
            android:tag="6"
            android:onClick="onclickitem"
            android:id="@+id/purses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purses_bags"
            ></ImageView>
        <ImageView
            android:tag="7"
            android:onClick="onclickitem"
            android:id="@+id/hats"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hats"
            ></ImageView>
        <ImageView
            android:tag="8"
            android:onClick="onclickitem"
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            ></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear2_category_layout"
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent">

        <ImageView
            android:tag="9"
            android:onClick="onclickitem"
            android:id="@+id/headphones"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            ></ImageView>
        <ImageView
            android:tag="10"
            android:id="@+id/laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laptops"
            android:onClick="onclickitem"
            ></ImageView>
        <ImageView
            android:tag="11"
            android:id="@+id/watches"
            android:onClick="onclickitem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/watches"
            ></ImageView>
        <ImageView
            android:tag="12"
            android:onClick="onclickitem"
            android:id="@+id/mobile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            ></ImageView>

    </LinearLayout>
</RelativeLayout>