<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:id="@+id/home_cardview"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="25dp"

    app:cardElevation="15dp">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"></TextView>
        <ImageView
            android:id="@+id/product_image1"
            android:layout_below="@id/product_name1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="180dp">
        </ImageView>
        <TextView
            android:layout_below="@id/product_image1"
            android:id="@+id/product_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_below="@id/product_price1"
            android:id="@+id/product_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"></TextView>

        
    </RelativeLayout>

    
</androidx.cardview.widget.CardView>